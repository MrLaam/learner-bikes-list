@model LearnerBikes.Models.BikeListViewModel

<link rel="stylesheet" href="~/css/bikelist.css" />

<div class="content-wrapper">
    <div class="filter-section-wrapper">
        <div class="filter-icon-wrapper">
            <img class="filter-icon" src="~/images/filtericon.png" onclick="toggleDisplay('filter')" />
        </div>
        <div class="filter-wrapper" id="filter">
            @*<a asp-controller="BikeList" asp-action="Index" asp-route-filterName="make" asp-route-filterValue="Aprilia">Aprilia</a>

            <p>Make</p>
            <select>
                <option selected disabled>Choose Make...</option>
                <option asp-controller="BikeList" asp-action="Index" asp-route-filterName="make" asp-route-filterValue="Aprilia">Aprilia</option>
                <option>KTM</option>
                <option>Honda</option>
                <option>Yamaha</option>
            </select>*@

            <form id="bikeFilterForm" onchange="applyFilters()" asp-action="Index" asp-controller="BikeList">
                <select asp-for="BikeFilters.Make">
                    <option selected="selected" value="Any Make">Make (Any)</option>
                    <option value="Aprilia">Aprilia</option>
                    <option value="Honda">Honda</option>
                    <option value="KTM">KTM</option>
                    <option value="Yamaha">Yamaha</option>
                </select>
                @*<input asp-for="BikeFilters.Make" placeholder="Enter a make"/>*@
            </form>
        </div>

    </div>

    <div class="bike-list-wrapper">
        @if (Model.Bikes.Count() > 0)
        {
        <div class="card-wrapper">
            @foreach (var bike in Model.Bikes)
            {
            <div class="bike-card">
                <img class="bike-image" src="@bike.ImageUrl" />
                <h2>@bike.Make @bike.Model</h2>
            </div>
            }
        </div>
            }
            else
            {
            <p>Could not find any bikes.</p>
            }
    </div>
</div>

@{
ViewData["Title"] = "Browse";
}